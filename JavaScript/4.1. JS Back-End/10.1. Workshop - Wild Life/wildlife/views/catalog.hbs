<section id="catalog">
    <h1>All posts</h1>
    <div class="band">

        {{#each posts}}
        {{> postPreview}}

        {{else}}
        
        <!-- If there are still no posts for wildlife in the database display: -->
        <div class="no-posts">
            <div class="no-posts-img">
                <img src="./static/img/animal.jpg" alt="image_nature_3">
            </div>
            <p class="no-offer">There are no posts yet &hellip;</p>
        </div>
        {{/each}}
    </div>
</section>